if [ "$1" = "--playground" ]; then
  # build playground and copy to ./playground
  cp -v ./src/main_playground/Main.jsx ./src/components
  npm run build
  # overwrite the old files in ./playground
  cp -rv ./dist/images ./playground
  cp -v ./dist/index.html ./dist/index.bundle.js ./dist/index.bundle.js.map ./playground
fi

# build Homepage and copy to root directory
cp -v ./src/main_homepage/Main.jsx ./src/components
npm run build
# overwrite the old files in root directory
cp -rv ./dist/images ./
cp -v ./dist/index.html ./dist/index.bundle.js ./dist/index.bundle.js.map ./