# build playground and copy to ./playground
sed -i '' "s#portfolio#playground#" src/index.jsx
npm run build
# overwrite the old files in ./playground
cp ./dist/index.bundle.js ./dist/index.bundle.js.map ./playground

# build homepage and copy to ./homepage
sed -i '' "s#playground#homepage#" src/index.jsx
npm run build
# overwrite the old files in ./homepage
cp ./dist/index.bundle.js ./dist/index.bundle.js.map ./homepage

# build Homepage and copy to root directory
sed -i '' "s#homepage#portfolio#" src/index.jsx
npm run build
# overwrite the old files in root directory
cp ./dist/index.bundle.js ./dist/index.bundle.js.map ./